<!-- views/pages/register.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ("../partials/head") %>
</head>
<body class="container">

<header>
    <%- include ("../partials/header") %>
</header>

<main>
    <div class="jumbotron">
        <form action="/user/signup" method="post">          
            <div class="container">
                <table>
                    <tr>
                        <td><label for="username"><b>Username</b></label></td>
                        <td><input type="text" placeholder="Enter Username" name="username" required></td>
                    </tr>
                    
                    <tr>
                        <td><label for="password"><b>Password</b></label></td>
                        <td><input type="password" placeholder="Enter Password" name="password" required></td>

                        <td><label for="psw_repeat"><b>Repeat Password</b></label></td>
                        <td><input type="password" placeholder="Repeat Password" name="psw_repeat" required></td>
                    </tr>

                    <tr>
                        <td><label for="email"><b>Email</b></label></td>
                        <td><input type="email" placeholder="Email" name="email" required></td>
                    </tr>

                    <tr>
                        <td><label for="country"><b>Country</b></label></td>
                        <td><input type="country" placeholder="Country" name="country" required></td>
                    </tr>

                    <tr>
                        <td><label for="experience"><b>experience</b></label></td>
                        <td><input type="experience" placeholder="Experience" name="experience" required></td>
                    </tr>
                </table>
                    
                <button type="submit">Register</button>
                
            </div>
          
            <div class="container" style="background-color:#f1f1f1">
                <button type="button" class="cancelbtn">Cancel</button>
                <span class="psw">Forgot <a href="#">password?</a></span>
            </div>
        </form>
    </div>
</main>

<footer>
    <%- include ("../partials/footer") %>
</footer>

</body>
</html>